<%= form_for(@team) do |f| %>
    <%= f.label :name, "Team Name" %><br>
    <%= f.text_field :name %><br>
    <%= f.label :supervisor, "Team Supervisor" %><br>
    <%= f.select :supervisor_id, @employees.map { |employee| [employee.name, employee.id] } %><br>
    <%= f.label :employees, "Team Members" %><br>
    <% @employees.each do |employee| %>
      <%= check_box_tag 'team[member_ids][]', employee.id %> <%= "  #{employee.name}" %><br>
    <% end %>
    <%= f.submit %>
<% end %>
